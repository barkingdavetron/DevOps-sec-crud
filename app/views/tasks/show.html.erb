<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="container mt-5">
  <%= render @task %>

  <div class="mt-3">
    <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-warning me-2" %>
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Destroy this task", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
